{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": []
  },
  "include": ["index.ts", "server/**/*.ts", "web/src/**/*.tsx"],
  "exclude": ["node_modules", "web/dist"]
}
