{
  "name": "mcpay-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel --filter='./apps/*' --filter='./packages/*'",
    "dev:examples": "turbo run dev --parallel --filter='./examples/*'",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "changeset": "changeset",
    "release": "changeset version && pnpm -r install --no-frozen-lockfile && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "turbo": "^2.1.3",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "ai": "5.0.0-beta.20",
      "@modelcontextprotocol/sdk": "1.18.2"
    }
  }
}


