{
  "name": "mcpay",
  "version": "0.1.10",
  "description": "SDK and CLI for MCPay functionality - MCP servers with payment capabilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcpay": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "client": "./dist/client.js",
      "node": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./handler": {
      "types": "./dist/handler.d.ts",
      "default": "./dist/handler.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "release:beta": "pnpm -C ../.. release:beta",
    "release:stable": "pnpm -C ../.. release:stable"
  },
  "keywords": [
    "mcpay",
    "sdk",
    "cli",
    "mcp",
    "payment",
    "x402",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.18.2",
    "commander": "^12.1.0",
    "dotenv": "^16.5.0",
    "viem": "2.37.13",
    "x402": "^0.6.5",
    "x402-fetch": "^0.6.0",
    "zod": "^3.25.76",
    "mcp-handler": "1.0.2"
  }
}